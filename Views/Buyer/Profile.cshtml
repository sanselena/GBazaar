@{
    ViewData["Title"] = "Buyer Profile";
}

<div class="container buyer-profile my-5">
    <div class="buyer-profile__header d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h1 class="mb-1" style="color: var(--text-main);">Buyer Workspace</h1>
            <p class="text-muted mb-0">Monitor spending, track approvals, and stay aligned with your company's budget policies.</p>
        </div>
        <form asp-controller="Auth" asp-action="Logout" method="get" class="dashboard-inline-form">
            <button type="submit" name="logout" class="btn btn-outline-secondary">Sign Out</button>
        </form>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Company Snapshot</h5>
                    <p class="text-muted">Budget information will be populated once the CFO completes their profile.</p>
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex justify-content-between">
                            <span>Total Budget</span>
                            <span class="fw-semibold text-primary">$10,000</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Committed Spend</span>
                            <span class="fw-semibold text-primary">$2,400</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Remaining</span>
                            <span class="fw-semibold text-primary">$7,600</span>
                        </div>
                    </div>
                    <hr />
                    <p class="small text-muted mb-0">Values shown are placeholders until my lovely Fulya wires the backend.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Pending Approvals</h5>
                        <span class="badge bg-primary">4 open</span>
                    </div>
                    <p class="text-muted">Only requests matching your role will appear here once approval routing is implemented.</p>
                    <div class="list-group list-group-flush dashboard-list">
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">PO-1045</div>
                                <small class="text-muted">Marketing materials &middot; $1,900</small>
                            </div>
                            <span class="badge text-bg-success">Within PO scope</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">PR-2082</div>
                                <small class="text-muted">Laptop refresh &middot; $3,750</small>
                            </div>
                            <span class="badge text-bg-warning">Manager review</span>
                        </div>
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">PR-2090</div>
                                <small class="text-muted">Facility upgrade &middot; $6,200</small>
                            </div>
                            <span class="badge text-bg-danger">Director review</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-1">
        <div class="col-lg-6">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Approval Ladder</h5>
                    <p class="text-muted">Routing thresholds are enforced by backend services; this section reflects the business rules.</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <span class="fw-semibold">PO</span> can approve up to <span class="fw-semibold">25%</span> of the company budget.
                        </li>
                        <li class="list-group-item">
                            <span class="fw-semibold">Manager</span> joins approvals over <span class="fw-semibold">25%</span> and up to <span class="fw-semibold">50%</span>.
                        </li>
                        <li class="list-group-item">
                            <span class="fw-semibold">Director</span> signs off between <span class="fw-semibold">50%</span> and <span class="fw-semibold">75%</span>.
                        </li>
                        <li class="list-group-item">
                            <span class="fw-semibold">CFO</span> is required for anything above <span class="fw-semibold">75%</span> and for budget configuration updates.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Recently Approved</h5>
                        <a href="#" class="small">View all</a>
                    </div>
                    <table class="table table-borderless align-middle mb-0 dashboard-table">
                        <thead class="text-muted">
                            <tr>
                                <th scope="col">Request</th>
                                <th scope="col">Amount</th>
                                <th scope="col">Final Approval</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>PO-1002</td>
                                <td>$2,150</td>
                                <td>PO</td>
                            </tr>
                            <tr>
                                <td>PR-2021</td>
                                <td>$4,800</td>
                                <td>Manager</td>
                            </tr>
                            <tr>
                                <td>PR-2034</td>
                                <td>$7,900</td>
                                <td>Director</td>
                            </tr>
                        </tbody>
                    </table>
                    <p class="small text-muted mt-3 mb-0">Entries are illustrative placeholders until real approval histories are available.</p>
                </div>
            </div>
        </div>
    </div>
</div>
