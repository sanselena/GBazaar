@using System.Globalization
@model GBazaar.ViewModels.Buyer.BuyerProfileViewModel

@{
    ViewData["Title"] = "Buyer Profile";
    var successMessage = TempData["ProfileMessage"] as string;
    var errorMessage = TempData["ProfileError"] as string;
}

<div class="container buyer-profile my-5">
    <div class="buyer-profile__header d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3 mb-4">
        <div>
            <h1 class="mb-1" style="color: var(--text-main);">Buyer Workspace</h1>
            <p class="text-muted mb-0">Monitor spending, track approvals, and stay aligned with your company's budget policies.</p>
        </div>
        <form asp-controller="Auth" asp-action="Logout" method="get" class="dashboard-inline-form">
            <button type="submit" name="logout" class="btn btn-outline-secondary">Sign Out</button>
        </form>
    </div>

    @if (!string.IsNullOrWhiteSpace(successMessage))
    {
        <div class="alert alert-success" role="status">@successMessage</div>
    }

    @if (!string.IsNullOrWhiteSpace(errorMessage))
    {
        <div class="alert alert-danger" role="alert">@errorMessage</div>
    }

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Company Snapshot</h5>
                    <p class="text-muted">Budget information updates once your finance team connects the backend.</p>
                    <div class="d-flex flex-column gap-2">
                        <div class="d-flex justify-content-between">
                            <span>Total Budget</span>
                            <span class="fw-semibold text-primary">@Model.CompanySnapshot.TotalBudget.ToString("C", CultureInfo.CurrentCulture)</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Committed Spend</span>
                            <span class="fw-semibold text-primary">@Model.CompanySnapshot.CommittedSpend.ToString("C", CultureInfo.CurrentCulture)</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Remaining</span>
                            <span class="fw-semibold text-primary">@Model.CompanySnapshot.Remaining.ToString("C", CultureInfo.CurrentCulture)</span>
                        </div>
                    </div>
                    <hr />
                    <p class="small text-muted mb-0">Values shown are placeholders until finance sync is completed.</p>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Pending Approvals</h5>
                        <span class="badge bg-primary">@Model.PendingApprovals.Count pending</span>
                    </div>
                    <p class="text-muted">Only requests matching your role will appear here once approval routing is implemented.</p>

                    @if (!Model.PendingApprovals.Any())
                    {
                        <p class="text-muted mb-0">You have no pending approvals right now.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush dashboard-list flex-grow-1">
                            @foreach (var request in Model.PendingApprovals)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
                                        <div>
                                            <div class="fw-semibold">@request.Reference</div>
                                            <small class="text-muted">@request.Amount.ToString("C", CultureInfo.CurrentCulture)</small>
                                        </div>
                                        <div class="d-flex align-items-center gap-2 flex-wrap">
                                            <span class="badge text-bg-info">@request.Stage</span>
                                            <form asp-action="ApproveRequest" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="requestId" value="@request.RequestId" />
                                                <button type="submit" class="btn btn-sm btn-success">Approve @request.Reference</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-1">
        <div class="col-lg-6">
            <div class="card dashboard-card h-100">
                <div class="card-body">
                    <h5 class="card-title">Approval Ladder</h5>
                    <p class="text-muted">Routing thresholds are enforced by backend services; this section reflects the business rules.</p>

                    @if (!Model.ApprovalLadder.Any())
                    {
                        <p class="text-muted mb-0">Approval rules will appear here once configured.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var step in Model.ApprovalLadder)
                            {
                                <li class="list-group-item">
                                    <span class="fw-semibold">@step.Role</span> handles up to <span class="fw-semibold">@step.ThresholdPercent.ToString("0")%</span>. @step.Description
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card dashboard-card h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Recently Approved</h5>
                        <a href="#" class="small">View all</a>
                    </div>

                    @if (!Model.RecentlyApproved.Any())
                    {
                        <p class="text-muted mb-0">No recent approvals to show just yet.</p>
                    }
                    else
                    {
                        <table class="table table-borderless align-middle mb-0 dashboard-table">
                            <thead class="text-muted">
                                <tr>
                                    <th scope="col">Request</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Final Approval</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var approved in Model.RecentlyApproved)
                                {
                                    <tr>
                                        <td>@approved.Reference</td>
                                        <td>@approved.Amount.ToString("C", CultureInfo.CurrentCulture)</td>
                                        <td>@approved.FinalApprovalRole</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }

                    <p class="small text-muted mt-3 mb-0">Entries are illustrative placeholders until real approval histories are available.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-4 mt-1">
        <div class="col-12">
            <div class="card dashboard-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">In-Flight Invoices</h5>
                        <span class="badge bg-secondary">@Model.Invoices.Count open</span>
                    </div>
                    <p class="text-muted">Invoices mirror the supplier's active orders so you can review payment and delivery progress side-by-side.</p>

                    @if (!Model.Invoices.Any())
                    {
                        <p class="text-muted mb-0">All supplier orders are fully delivered and paid—nothing to review right now.</p>
                    }
                    else
                    {
                        var previewCount = 3;
                        var hasMoreInvoices = Model.Invoices.Count > previewCount;
                        <div class="list-group list-group-flush dashboard-list invoice-list-container @(hasMoreInvoices ? "is-collapsed" : string.Empty)" data-invoice-container>
                            @for (var invoiceIndex = 0; invoiceIndex < Model.Invoices.Count; invoiceIndex++)
                            {
                                var invoice = Model.Invoices[invoiceIndex];
                                var hiddenClass = hasMoreInvoices && invoiceIndex >= previewCount ? " invoice-item--hidden" : string.Empty;
                                <div class="list-group-item invoice-item@hiddenClass" data-invoice-index="@invoiceIndex">
                                    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-start gap-3">
                                        <div>
                                            <div class="fw-semibold">@invoice.Reference</div>
                                            <small class="text-muted">Supplier: @invoice.SupplierName</small>
                                        </div>
                                        <div class="text-lg-end">
                                            <div class="fw-semibold">@invoice.TotalAmount.ToString("C", CultureInfo.CurrentCulture)</div>
                                            <small class="text-muted">Invoice @invoice.InvoiceNumber · @(invoice.InvoiceDate?.ToString("dd MMM yyyy", CultureInfo.CurrentCulture) ?? "Pending")</small>
                                        </div>
                                    </div>

                                    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 g-3 mt-3 small">
                                        <div class="col">
                                            <span class="text-uppercase text-muted d-block">Payment Status</span>
                                            <span class="fw-semibold text-body">@invoice.PaymentStatusLabel</span>
                                            @if (invoice.DueDate.HasValue)
                                            {
                                                <small class="text-muted d-block">Due @invoice.DueDate?.ToString("dd MMM yyyy", CultureInfo.CurrentCulture)</small>
                                            }
                                        </div>
                                        <div class="col">
                                            <span class="text-uppercase text-muted d-block">Fulfillment Status</span>
                                            <span class="fw-semibold text-body">@invoice.FulfillmentStatusLabel</span>
                                            @if (invoice.ExpectedDelivery.HasValue)
                                            {
                                                <small class="text-muted d-block">Expected @invoice.ExpectedDelivery?.ToString("dd MMM yyyy", CultureInfo.CurrentCulture)</small>
                                            }
                                        </div>
                                        <div class="col">
                                            <span class="text-uppercase text-muted d-block">Invoice Amount</span>
                                            <span class="fw-semibold text-body">@((invoice.AmountDue ?? invoice.TotalAmount).ToString("C", CultureInfo.CurrentCulture))</span>
                                            @if (invoice.InvoiceDate.HasValue)
                                            {
                                                <small class="text-muted d-block">Issued @invoice.InvoiceDate?.ToString("dd MMM yyyy", CultureInfo.CurrentCulture)</small>
                                            }
                                        </div>
                                        <div class="col">
                                            <span class="text-uppercase text-muted d-block">Outstanding</span>
                                            <span class="fw-semibold text-body">@invoice.OutstandingAmount.ToString("C", CultureInfo.CurrentCulture)</span>
                                            <small class="text-muted d-block">Order total @invoice.TotalAmount.ToString("C", CultureInfo.CurrentCulture)</small>
                                        </div>
                                    </div>

                                    @if (invoice.Items.Any())
                                    {
                                        <div class="mt-3 small">
                                            <span class="text-uppercase text-muted d-block">Line Items</span>
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var line in invoice.Items)
                                                {
                                                    <li class="d-flex justify-content-between align-items-start gap-3">
                                                        <span>@line.ItemName</span>
                                                        <span class="text-muted">@line.Quantity × @line.UnitPrice.ToString("C", CultureInfo.CurrentCulture) = <span class="fw-semibold text-body">@line.LineTotal.ToString("C", CultureInfo.CurrentCulture)</span></span>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    }

                                    <form asp-action="RateOrder" method="post" class="mt-3">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="PurchaseOrderId" value="@invoice.PurchaseOrderId" />
                                        <input type="hidden" name="InvoiceId" value="@invoice.InvoiceId" />
                                        <div class="d-flex flex-column flex-md-row align-items-md-center gap-3">
                                            <span class="text-muted">Would you like to rate this order?</span>
                                            <div class="btn-group" role="group" aria-label="Rate order @invoice.Reference">
                                                @for (var score = 1; score <= 5; score++)
                                                {
                                                    var radioId = $"rate-{invoice.PurchaseOrderId}-{score}";
                                                    <input type="radio"
                                                           class="btn-check"
                                                           name="RatingScore"
                                                           id="@radioId"
                                                           value="@score"
                                                           @(invoice.ExistingRating == score ? "checked" : string.Empty) />
                                                    <label class="btn btn-sm btn-outline-warning" for="@radioId">@(new string('*', score))</label>
                                                }
                                            </div>
                                            <button type="submit" class="btn btn-sm btn-primary">Submit rating</button>
                                        </div>
                                        @if (invoice.ExistingRating.HasValue)
                                        {
                                            <small class="text-muted d-block mt-2">You last rated this order @invoice.ExistingRating.Value out of 5.</small>
                                        }
                                    </form>
                                </div>
                            }

                            @if (hasMoreInvoices)
                            {
                                <div class="invoice-list-gradient" aria-hidden="true"></div>
                            }
                        </div>

                        @if (hasMoreInvoices)
                        {
                            <button type="button" class="btn btn-link px-0 mt-3" data-invoice-toggle>View all invoice history</button>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (() => {
            const container = document.querySelector('[data-invoice-container]');
            const toggleButton = document.querySelector('[data-invoice-toggle]');

            if (!container || !toggleButton) {
                return;
            }

            const toggleInvoices = () => {
                const collapsed = container.classList.toggle('is-collapsed');
                const hiddenItems = container.querySelectorAll('.invoice-item--hidden');

                hiddenItems.forEach((item) => {
                    item.classList.toggle('is-visible', !collapsed);
                });

                toggleButton.textContent = collapsed ? 'View all invoice history' : 'Hide invoice history';
            };

            // Initialize collapsed state to ensure hidden items respect the class set on the container.
            container.querySelectorAll('.invoice-item--hidden').forEach((item) => {
                if (!container.classList.contains('is-collapsed')) {
                    item.classList.add('is-visible');
                }
            });

            toggleButton.addEventListener('click', toggleInvoices);
        })();
    </script>
}
