<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GBazaar</title>
    
    <!-- CSS LINKS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor

    <!--NAVBAR -->
    <nav class="custom-nav">
        <div class="nav-left">
            <a asp-controller="Home" asp-action="Index" class="brand-logo">GBazaar</a>
            <a asp-controller="Home" asp-action="Index" class="nav-link-custom">Home</a>
        </div>
        <div class="nav-center">
            <input type="text" class="search-input" placeholder="Search..." />
        </div>
        <div class="nav-right">
            @if (User.Identity.IsAuthenticated)
            {
                var userType = User.FindFirst("UserType")?.Value;

                <div class="top-menu d-flex align-items-center">
                    @if (userType == "Buyer")
                    {
                        <a asp-controller="Buyer" asp-action="Profile" class="nav-link-custom">Workspace</a>
                    }
                    else if (userType == "Supplier")
                    {
                        <a asp-controller="Supplier" asp-action="Dashboard" class="nav-link-custom">Dashboard</a>
                    }

                    

                    <form asp-controller="Auth" asp-action="Logout" method="post" class="ms-2">
                        <button type="submit" class="btn btn-outline-secondary btn-sm">Sign Out</button>
                    </form>
                </div>
            }
            else
            {
                <div class="top-menu">
                    <a asp-controller="Auth" asp-action="Login" class="nav-link-custom">Login / SignUp</a>
                    
                </div>
            }
        </div>
    </nav>

    <!-- THIS IS WHERE THE PAGE CONTENT GETS INJECTED -->
    @RenderBody()

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>