@model IEnumerable<GBazaar.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="cosmic-container">
    <div class="cosmic-header">
        <div class="cosmic-header__icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="cosmic-header__content">
            <h1 class="cosmic-header__title">User Management</h1>
            <p class="cosmic-header__subtitle">Manage system users and permissions</p>
        </div>
        <div class="cosmic-header__actions">
            <button class="cosmic-btn cosmic-btn--primary" onclick="openCreateUserModal()">
                <i class="fas fa-user-plus"></i>
                <span>Create New User</span>
            </button>
            <a href="/Admin/Dashboard" class="cosmic-btn cosmic-btn--secondary">
                <i class="fas fa-arrow-left"></i>
                <span>Back to Dashboard</span>
            </a>
        </div>
    </div>

    @if (TempData["AdminSuccess"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["AdminSuccess"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["AdminError"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["AdminError"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="cosmic-card">
        <div class="cosmic-card__header">
            <h3 class="cosmic-card__title">
                <i class="fas fa-list"></i>
                User List (@Model.Count() users)
            </h3>
            <div class="cosmic-search">
                <i class="fas fa-search"></i>
                <input type="text" class="cosmic-search__input" placeholder="Search users..." id="userSearch">
            </div>
        </div>

        <div class="cosmic-table-wrapper">
            <table class="cosmic-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Last Login</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    @if (Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr data-user-id="@user.UserID">
                                <td>@user.UserID</td>
                                <td>
                                    <div class="user-cell">
                                        <div class="user-cell__avatar">
                                            @if (!string.IsNullOrEmpty(user.FullName) && user.FullName.Length >= 2)
                                            {
                                                var nameParts = user.FullName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
                                                if (nameParts.Length >= 2)
                                                {
                                                    @(nameParts[0][0].ToString().ToUpper() + nameParts[1][0].ToString().ToUpper())
                                                }
                                                else
                                                {
                                                    @(user.FullName.Substring(0, Math.Min(2, user.FullName.Length)).ToUpper())
                                                }
                                            }
                                            else
                                            {
                                                @("U")
                                            }
                                        </div>
                                        <span>@user.FullName</span>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="role-badge role-badge--@(user.Role?.RoleName?.ToLower() ?? "unknown")">
                                        @(user.Role?.RoleName ?? "Unknown")
                                    </span>
                                </td>
                                <td>@(user.Department?.DepartmentName ?? "N/A")</td>
                                <td>
                                    <span class="status-badge status-badge--@(user.IsActive ? "active" : "inactive")">
                                        @(user.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>@(user.LastLoginAt?.ToString("yyyy-MM-dd HH:mm") ?? "Never")</td>
                                <td>
                                    <div class="action-buttons">
                                        <button class="action-btn action-btn--edit" title="Edit User" onclick="editUser(@user.UserID)">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="action-btn action-btn--@(user.IsActive ? "pause" : "play")"
                                                title="@(user.IsActive ? "Deactivate" : "Activate") User"
                                                onclick="toggleUserStatus(@user.UserID, '@Html.Raw(Html.Encode(user.FullName))', @user.IsActive.ToString().ToLower())">
                                            <i class="fas fa-@(user.IsActive ? "pause" : "play")"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center">No users found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model.Any())
        {
            <div class="cosmic-pagination">
                <button class="cosmic-pagination__btn" disabled>
                    <i class="fas fa-chevron-left"></i>
                </button>
                <span class="cosmic-pagination__info">Page 1 of 1</span>
                <button class="cosmic-pagination__btn" disabled>
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        }
    </div>
</div>

<!-- Create User Modal -->
<div id="createUserModal" class="cosmic-modal">
    <div class="cosmic-modal__overlay" onclick="closeCreateUserModal()"></div>
    <div class="cosmic-modal__content">
        <div class="cosmic-modal__header">
            <h3 class="cosmic-modal__title">
                <i class="fas fa-user-plus"></i>
                Create New User
            </h3>
            <button class="cosmic-modal__close" onclick="closeCreateUserModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form class="cosmic-form" id="createUserForm" method="post" action="/Admin/CreateUser">
            @Html.AntiForgeryToken()
            <div class="cosmic-form__row">
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Full Name</label>
                    <input type="text" name="FullName" class="cosmic-form__input" placeholder="Enter full name" required>
                </div>
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Email</label>
                    <input type="email" name="Email" class="cosmic-form__input" placeholder="Enter email" required>
                </div>
            </div>

            <div class="cosmic-form__row">
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Password</label>
                    <input type="password" name="Password" class="cosmic-form__input" placeholder="Enter password" required>
                </div>
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Confirm Password</label>
                    <input type="password" name="ConfirmPassword" class="cosmic-form__input" placeholder="Confirm password" required>
                </div>
            </div>

            <div class="cosmic-form__row">
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Role</label>
                    <select name="RoleID" class="cosmic-form__select" required>
                        <option value="">Select role...</option>
                        <!-- These will be populated from the database -->
                    </select>
                </div>
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Department</label>
                    <select name="DepartmentID" class="cosmic-form__select">
                        <option value="">Select department...</option>
                        <!-- These will be populated from the database -->
                    </select>
                </div>
            </div>

            <div class="cosmic-form__actions">
                <button type="button" class="cosmic-btn cosmic-btn--secondary" onclick="closeCreateUserModal()">
                    <i class="fas fa-times"></i>
                    Cancel
                </button>
                <button type="submit" class="cosmic-btn cosmic-btn--primary">
                    <i class="fas fa-save"></i>
                    Create User
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function openCreateUserModal() {
            // Load roles and departments for the form
            loadRolesAndDepartments();
            document.getElementById('createUserModal').classList.add('cosmic-modal--active');
            document.body.style.overflow = 'hidden';
        }

        function closeCreateUserModal() {
            document.getElementById('createUserModal').classList.remove('cosmic-modal--active');
            document.body.style.overflow = '';
            // Reset form
            document.getElementById('createUserForm').reset();
        }

        function loadRolesAndDepartments() {
            // Load roles
            fetch('/Admin/GetRoles')
                .then(response => response.json())
                .then(roles => {
                    const roleSelect = document.querySelector('select[name="RoleID"]');
                    roleSelect.innerHTML = '<option value="">Select role...</option>';
                    roles.forEach(role => {
                        roleSelect.innerHTML += `<option value="${role.roleID}">${role.roleName}</option>`;
                    });
                })
                .catch(error => console.error('Error loading roles:', error));

            // Load departments
            fetch('/Admin/GetDepartments')
                .then(response => response.json())
                .then(departments => {
                    const deptSelect = document.querySelector('select[name="DepartmentID"]');
                    deptSelect.innerHTML = '<option value="">Select department...</option>';
                    departments.forEach(dept => {
                        deptSelect.innerHTML += `<option value="${dept.departmentID}">${dept.departmentName}</option>`;
                    });
                })
                .catch(error => console.error('Error loading departments:', error));
        }

        function toggleUserStatus(userId, userName, isActive) {
            const action = isActive ? 'deactivate' : 'activate';
            if (confirm(`Are you sure you want to ${action} user "${userName}"?`)) {
                const formData = new FormData();
                formData.append('userId', userId);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                fetch('/Admin/ToggleUserStatus', {
                    method: 'POST',
                    body: formData
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert('Error updating user status');
                    }
                })
                .catch(error => {
                    alert('Error updating user status: ' + error);
                });
            }
        }

        function editUser(userId) {
            alert('Edit functionality will be implemented soon.');
        }

        // Search functionality
        document.getElementById('userSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#userTableBody tr');

            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        // Form submission with validation
        document.getElementById('createUserForm').addEventListener('submit', function(e) {
            const password = document.querySelector('input[name="Password"]').value;
            const confirmPassword = document.querySelector('input[name="ConfirmPassword"]').value;

            if (password.length < 6) {
                e.preventDefault();
                alert('Password must be at least 6 characters long.');
                return;
            }

            if (password !== confirmPassword) {
                e.preventDefault();
                alert('Passwords do not match.');
                return;
            }
        });
    </script>
}