@model IEnumerable<GBazaar.Models.User>
@{
    ViewData["Title"] = "User Management";
}

<div class="cosmic-container">
    <div class="cosmic-header">
        <div class="cosmic-header__icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="cosmic-header__content">
            <h1 class="cosmic-header__title">User Management</h1>
            <p class="cosmic-header__subtitle">Manage system users and permissions</p>
        </div>
        <div class="cosmic-header__actions">
            <button class="cosmic-btn cosmic-btn--primary" onclick="openCreateUserModal()">
                <i class="fas fa-user-plus"></i>
                <span>Create New User</span>
            </button>
            <a href="/Admin/Dashboard" class="cosmic-btn cosmic-btn--secondary">
                <i class="fas fa-arrow-left"></i>
                <span>Back to Dashboard</span>
            </a>
        </div>
    </div>

    <div class="cosmic-card">
        <div class="cosmic-card__header">
            <h3 class="cosmic-card__title">
                <i class="fas fa-list"></i>
                User List
            </h3>
            <div class="cosmic-search">
                <i class="fas fa-search"></i>
                <input type="text" class="cosmic-search__input" placeholder="Search users...">
            </div>
        </div>
        
        <div class="cosmic-table-wrapper">
            <table class="cosmic-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Created Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Sample Data Rows -->
                    <tr>
                        <td>1</td>
                        <td>
                            <div class="user-cell">
                                <div class="user-cell__avatar">JD</div>
                                <span>john.doe</span>
                            </div>
                        </td>
                        <td>john.doe@gbazaar.com</td>
                        <td><span class="role-badge role-badge--admin">Admin</span></td>
                        <td>IT Department</td>
                        <td><span class="status-badge status-badge--active">Active</span></td>
                        <td>2025-01-15</td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn action-btn--edit" title="Edit User">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn action-btn--delete" title="Delete User" onclick="confirmDelete(1, 'john.doe')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>
                            <div class="user-cell">
                                <div class="user-cell__avatar">AS</div>
                                <span>alice.smith</span>
                            </div>
                        </td>
                        <td>alice.smith@gbazaar.com</td>
                        <td><span class="role-badge role-badge--buyer">Buyer</span></td>
                        <td>Procurement</td>
                        <td><span class="status-badge status-badge--active">Active</span></td>
                        <td>2025-02-10</td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn action-btn--edit" title="Edit User">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn action-btn--delete" title="Delete User" onclick="confirmDelete(2, 'alice.smith')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>
                            <div class="user-cell">
                                <div class="user-cell__avatar">BJ</div>
                                <span>bob.jones</span>
                            </div>
                        </td>
                        <td>bob.jones@supplier.com</td>
                        <td><span class="role-badge role-badge--supplier">Supplier</span></td>
                        <td>N/A</td>
                        <td><span class="status-badge status-badge--inactive">Inactive</span></td>
                        <td>2025-03-05</td>
                        <td>
                            <div class="action-buttons">
                                <button class="action-btn action-btn--edit" title="Edit User">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="action-btn action-btn--delete" title="Delete User" onclick="confirmDelete(3, 'bob.jones')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="cosmic-pagination">
            <button class="cosmic-pagination__btn" disabled>
                <i class="fas fa-chevron-left"></i>
            </button>
            <span class="cosmic-pagination__info">Page 1 of 1</span>
            <button class="cosmic-pagination__btn" disabled>
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</div>

<!-- Create User Modal -->
<div id="createUserModal" class="cosmic-modal">
    <div class="cosmic-modal__overlay" onclick="closeCreateUserModal()"></div>
    <div class="cosmic-modal__content">
        <div class="cosmic-modal__header">
            <h3 class="cosmic-modal__title">
                <i class="fas fa-user-plus"></i>
                Create New User
            </h3>
            <button class="cosmic-modal__close" onclick="closeCreateUserModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <form class="cosmic-form" id="createUserForm">
            <div class="cosmic-form__row">
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Username</label>
                    <input type="text" class="cosmic-form__input" placeholder="Enter username" required>
                </div>
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Email</label>
                    <input type="email" class="cosmic-form__input" placeholder="Enter email" required>
                </div>
            </div>

            <div class="cosmic-form__row">
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Password</label>
                    <input type="password" class="cosmic-form__input" placeholder="Enter password" required>
                </div>
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Confirm Password</label>
                    <input type="password" class="cosmic-form__input" placeholder="Confirm password" required>
                </div>
            </div>

            <div class="cosmic-form__row">
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Role</label>
                    <select class="cosmic-form__select" required>
                        <option value="">Select role...</option>
                        <option value="admin">Admin</option>
                        <option value="buyer">Buyer</option>
                        <option value="supplier">Supplier</option>
                    </select>
                </div>
                <div class="cosmic-form__group">
                    <label class="cosmic-form__label">Department</label>
                    <select class="cosmic-form__select">
                        <option value="">Select department...</option>
                        <option value="it">IT Department</option>
                        <option value="procurement">Procurement</option>
                        <option value="finance">Finance</option>
                        <option value="operations">Operations</option>
                    </select>
                </div>
            </div>

            <div class="cosmic-form__actions">
                <button type="button" class="cosmic-btn cosmic-btn--secondary" onclick="closeCreateUserModal()">
                    <i class="fas fa-times"></i>
                    Cancel
                </button>
                <button type="submit" class="cosmic-btn cosmic-btn--primary">
                    <i class="fas fa-save"></i>
                    Create User
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function openCreateUserModal() {
            document.getElementById('createUserModal').classList.add('cosmic-modal--active');
            document.body.style.overflow = 'hidden';
        }

        function closeCreateUserModal() {
            document.getElementById('createUserModal').classList.remove('cosmic-modal--active');
            document.body.style.overflow = '';
        }

        function deleteUser(userId, username) {
            if (confirm(`Are you sure you want to delete user "${username}"?`)) {
                fetch('/Admin/DeleteUser', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ id: userId })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('User deleted successfully!');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    alert('Error deleting user: ' + error);
                });
            }
        }

        // Form submission
        document.getElementById('createUserForm').addEventListener('submit', function(e) {
            e.preventDefault();
            // TODO: Implement create functionality
            console.log('Creating user...');
            alert('Create functionality will be implemented with database connection.');
            closeCreateUserModal();
        });
    </script>
}
